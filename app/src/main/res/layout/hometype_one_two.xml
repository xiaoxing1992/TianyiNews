<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/zzbackground"

    android:orientation="horizontal"
    app:backgroundAttr="zzbackground">

    <ImageView
        android:id="@+id/type_one_two_img"
        android:layout_width="140dp"
        android:layout_height="110dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="110dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="?attr/zzbackground"
        android:orientation="vertical"
        app:backgroundAttr="zzbackground">

        <TextView
            android:id="@+id/type_one_two_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:textColor="?attr/zztextColor"
            android:textSize="19sp"
            app:textColorAttr="zztextColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="?attr/zzbackground"
            android:gravity="bottom"
            android:orientation="horizontal"
            app:backgroundAttr="zzbackground">

            <TextView
                android:id="@+id/type_one_two_groupname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="测试"
                android:textColor="?attr/zztextColor"
                app:textColorAttr="zztextColor" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/type_one_two_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="测试1"
                android:textColor="?attr/zztextColor"
                app:textColorAttr="zztextColor" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>