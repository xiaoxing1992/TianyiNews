                            android:text="设置" />
                    </RelativeLayout>

                    <ImageView style="@style/left_drawer_item_line" />-->

                    <RelativeLayout
                        android:id="@+id/feedback_btn"
                        style="@style/left_drawer_item_layout"
                        android:background="?attr/zzbackground"
                        app:backgroundAttr="zzbackground">

                        <TextView
                            android:id="@+id/feedback_text"
                            style="@style/left_drawer_item_text"
                            android:drawableLeft="@drawable/ic_drawer_feedback"
                            android:text="反馈"
                            android:textColor="?attr/zztextColor"
                            app:textColorAttr="zztextColor" />
                    </RelativeLayout>

                    <ImageView style="@style/left_drawer_item_line" />

                    <RelativeLayout
                        android:id="@+id/appstore_btn"
                        style="@style/left_drawer_item_layout"
                        android:background="?attr/zzbackground"
                        android:visibility="visible"
                        app:backgroundAttr="zzbackground">

                        <TextView
                            android:id="@+id/appstore_text"
                            style="@style/left_drawer_item_text"
                            android:drawableLeft="@drawable/ic_drawer_appstore"
                            android:text="更多应用"
                            android:textColor="?attr/zztextColor"
                            app:textColorAttr="zztextColor" />
                    </RelativeLayout>

